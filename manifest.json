{
  "manifest_version": 3,
  "name": "Duo Saver Extension",
  "version": "0.1",
  "description": "WIP",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://duotalk.com.br/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://duotalk.com.br/*"],
      "js": ["src/content/index.js"],
      "run_at": "document_idle"
    }
  ]
}
